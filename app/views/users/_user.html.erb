<div class="u">
  <div class="a">
    <%= link_to image_tag(user.image, :alt => user.name), user.url %>
  </div>
  <div class="nc">
    <%= link_to user.name, user.url %>
  </div>
  <div class="c">
    <% if user.arrived? %>
      ✓ Arrived <small><%= link_to 'Doch nicht?', users_check_out_path(user) %></small>
    <% else %>
      <%= link_to '✓ Check in', users_check_in_path(user) %>
    <% end %>
  </div>
</div>
