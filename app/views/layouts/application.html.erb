<!DOCTYPE html>
<html>
<head>
  <title><%- if @title %><%= @title %> â€“ <% end %>agile design camp</title>
  <link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
  <%= javascript_include_tag 'jquery.min', 'rails', 'application' %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    //_gaq.push(['_setAccount', 'UA-75436-9']);
    _gaq.push(['_trackPageview']);
    _gaq.push(['_trackPageLoadTime']);
    _gaq.push(['_gat._anonymizeIp']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();    
  </script>
  <%= content_for :javascripts %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= [params[:controller], params[:action]] * '-' %>">

<div id="container">
  
<% if flash.present? %>
  <div id="flash">
  <% flash.each do |key, msg| %>
    <div class="flash <%= key %>" id="flash_<%= key %>"><%= msg %></div>
    <script type="text/javascript">setTimeout(function(){ $(window).bind('click mousemove keypress', function(){ $('#flash_<%= j key %>').fadeOut('slow'); }) }, 600);</script>
  <% end %>
  </div>
<% end %>

<div id="header">
  <h1><%= link_to 'agile design camp', '/' %></h1>
</div>

<div id="nav">
<% if current_user %>
  <div class="u">
    <div class="a">
      <%= image_tag(current_user.image, :alt => current_user.name) %>
    </div>
    <div class="nc">
      <%= current_user.name %><%- if is_admin? %> (<%= link_to 'Admin', '/admin' %>)<% end %>
      <br><%= link_to "sign out", signout_path %>
    </div>
  </div>
<% else %>
  <!-- sign in <%= link_to "via twitter", "/auth/twitter" %> or <%= link_to "via facebook", "/auth/facebook" %> -->
<% end %>
</div>

<div id="content">
<%= yield %>
</div>

<div id="footer">
  <p class="links">
    <%= link_to 'sponsoring', '/sponsoring' %> | 
    <%= link_to 'privacy policy and imprint', '/impressum' %>
  </p>
</div>

</div>

</body>
</html>
