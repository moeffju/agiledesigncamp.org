<!DOCTYPE html>
<html>
<head>
  <title><%- if @title %><%= @title %> â€“ <% end %>Hamburg++ 2011</title>
  <link href="/stylesheets/screen.css" media="screen, projection" rel="stylesheet" type="text/css" />
  <link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
  <!--[if IE]>
      <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
  <![endif]-->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="container">
  
<% if flash.present? %>
  <div id="flash">
  <% flash.each do |key, msg| %>
    <div class="flash <%= key %>" id="flash_<%= key %>"><%= msg %></div>
    <script type="text/javascript">setTimeout(function(){ $(window).bind('click mousemove keypress', function(){ $('#flash_<%= j key %>').fadeOut('slow'); }) }, 600);</script>
  <% end %>
  </div>
<% end %>

<div id="header">
  <h1>Hamburg++</h1>
</div>

<div id="nav">
<% if current_user %>
  <div class="u">
    <div class="a">
      <%= image_tag(current_user.image, :alt => current_user.name) %>
    </div>
    <div class="nc">
      <%= current_user.name %>
      <br><%= link_to "Abmelden", signout_path %>
    </div>
  </div>
<% else %>
  <%= link_to "Anmelden", "/signin" %>
<% end %>
</div>

<div id="content">
<%= yield %>
</div>

</div>

</body>
</html>
